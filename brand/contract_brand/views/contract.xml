<odoo>

    <record model="ir.ui.view" id="contract_contract_form_view">
        <field name="name">contract.contract.form (in contract_brand)</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="brand_id"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="contract_contract_search_view">
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_by_date_end']" position="after">
                <filter name="group_by_brand" string="Brand"
                        context="{'group_by':'brand_id'}"/>
            </xpath>
        </field>
    </record>

</odoo>
